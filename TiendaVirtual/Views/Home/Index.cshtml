@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-sm-12 col-md-7 col-lg-7 col-xl-7 mb-5 pl-5 pr-5">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/Image/carousel1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/Image/carousel2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/Image/carousel3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-12 col-md-5 col-lg-5 col-xl-5 pl-0 pr-5">
            <div class="row mb-4">
                <img src="/Image/NewArrivals.png"/>
            </div>
            <div class="row mb-4">
                <div class="col-6 col-img">                    
                    <img src="/Image/102859317.png" class="img-new" alt="" />
                    <h6>Vichy Mineral 89 Ojos 15ml</h6>
                </div>
                <div class="col-6 col-img pr-5">
                    <img src="/Image/103214504.png" class="img-new" alt="" />
                    <h6>Duo Tous Gold - Silver Eau de Toilette 30ml</h6>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-6 col-img">
                    <img src="/Image/103432537.png" class="img-new" alt="" />
                    <h6>Conjunto 3 piezas mameluco pantalón y suéter hoddie rosa para niña</h6>
                </div>
                <div class="col-6 col-img pr-5">
                    <img src="/Image/103600947.png" class="img-new" alt="" />
                    <h6>Conjunto 3 piezas multicolor estampadas para niño</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .col-img {
        text-align: center;
        margin-top: 0
    }

    .col-txt {
        text-align: justify;
    }

    .img-new {
        height: 155px;
        padding-top: 0
    }
</style>
